{
  "name": "TGNN Dev Container",
  "dockerFile": "Dockerfile",
  "runArgs": ["--gpus", "all"],
  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash"
  },
  "extensions": [
    "ms-python.python",
    "ms-vscode-remote.remote-containers"
  ],
  "forwardPorts": [8888],
  "postCreateCommand": "pip install -r requirements.txt",
  "remoteUser": "root"
}
